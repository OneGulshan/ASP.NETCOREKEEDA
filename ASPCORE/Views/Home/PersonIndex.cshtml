@model Person
<!-- Html Helper Example -->
@Html.Label("Student Name", "Student Name")
@Html.Label(Model.PersonName)
<br />
@Html.LabelFor(m=>m.PersonName, new{@class="form-label"})
<br />
@Html.TextBoxFor(m=>m.PersonName, new{@class="form-control"})
<br />
@Html.TextBox("StudentName", Model.PersonName, new{@class="form-control"})
<br />
@Html.PasswordFor(m=>m.Password, new{@class="form-control"})
<br />
@Html.Password("Password", Model.Password, new{@class="form-control"})
<br />
@Html.TextAreaFor(m=>m.Description, new{rows=5, cols=50})
<br />
@Html.TextArea("Description", "Default Value", new{rows=5, cols=50})
<br />
@Html.CheckBoxFor(m=>m.IsActive)
<br />
@Html.CheckBox("IsActive", Model.IsActive)
<br />
@Html.RadioButtonFor(m=>m.Gender, "Male")
@Html.RadioButtonFor(m=>m.Gender, "Female")
<br />
Male : @Html.RadioButton("Gender", "Male")
FeMale : @Html.RadioButton("Gender", "FeMale")
<br />
@Html.DropDownListFor(x=>x.MaritalStatus, new SelectList(Enum.GetValues(typeof(MaritalStatus))), "-- Select Status --")
<br />
@Html.DropDownList("MaritalStatus", new SelectList(Enum.GetValues(typeof(MaritalStatus))), "-- Select Status --")
@Html.HiddenFor(m=>m.PersonId)
<br />
@Html.DropDownListFor(m=>m.Country, new List<SelectListItem>{
    new SelectListItem{Text = "USA", Value = "1"},
    new SelectListItem{Text = "Canada", Value = "2"},
    new SelectListItem{Text = "Australia", Value = "3"}
}, "-- Select Country --")
@Html.ValidationMessageFor(m=>m.Country)
@*//Note:- Use Html Helpers with For and Ignore without For*@